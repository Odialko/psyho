:scss
  body {
    background-color: #ebecec;
    .main-background-color {
      .menu-intro {
        div {
          text-align: center;
          img {
            margin-top: 4rem;
            width: 100%;
            height: 100%;
          }
          a {
            color: #c4314a;
          }
        }
      }
    }
  }
  @media (max-width: 1199px) {
    html {
      body {
        font-size: 1.2rem;
      }
    }
  }

  @media (max-width: 991px) {
    html {
      body {
        font-size: 0.9rem;
      }
    }
  }

  @media (max-width: 767px) {
    html {
      body {
        font-size: 1.2rem;
        .main-background-color {
          .menu-intro {
            div {
              .img-content-margin {
                margin-left: 15%;
              }
            }
          }
        }
      }
    }
  }

.main-background-color
  .container.menu-intro
    .row
      .col-sm-2.col-xs-5.col-xs-offset-2
        =image_tag "menu_intro_1.png", class: "img-responsive"
        =link_to "ДЕТСКИЙ ПСИХОАНАЛИЗ", '#'
      .col-sm-2.col-xs-5
        =image_tag "menu_intro_2.png", class: "img-responsive"
        =link_to "СЕМЕЙНАЯ ПСИХОАНАЛИТИЧЕСКАЯ ТЕРАПИЯ", '#'
      .col-sm-2.col-xs-5.img-content-margin
        =image_tag "menu_intro_3.png", class: "img-responsive"
        =link_to "ИНДИВИДУАЛЬНЫЙ ПСИХОАНАЛИЗ", '#'
      .col-sm-2.col-xs-5
        =image_tag "menu_intro_4.png", class: "img-responsive"
        =link_to "БИЗНЕС-ПСИХОЛОГИЧЕСКОЕ КОНСУЛЬТИРОВАНИЕ", '#'

= render 'footer'

:javascript
  $(document).ready(function() {
    let header_height = $('header').height();
    let footer_height = $('footer').height();
    $('.main-background-color').css('min-height', $(window).height() - header_height - footer_height);
  })
