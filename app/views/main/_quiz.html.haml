:javascript
  $(document).ready(function() {
    buildChart("quizCart");
  });

  function buildChart(selector) {
    var ctx = document.getElementById(selector);
    var data = {
            labels: ["1", "2", "3", "4"],
            datasets: [
              {
                data: [2, 12, 28, 58],
                backgroundColor: [
                    '#94000c',
                    '#94000c',
                    '#94000c',
                    '#94000c'
                ]
              },
              {
                data: [98, 88, 72, 42],
                backgroundColor: [
                    '#cccccc',
                    '#cccccc',
                    '#cccccc',
                    '#cccccc'
                ]
              }
            ]
        };
    var quizCart = new Chart(ctx, {
        type: 'bar',
        data: data,
        options: {
          tooltips: {
            enabled: false
          },
          legend: {
            display: false
          },
          scales: {
              yAxes: [{
                stacked: true,
                display: false
              }],
              xAxes: [{
                gridLines: {
                  display: false
                },
                color: '#94000c',
                stacked: true
              }]
          }
        }
    });
  }

