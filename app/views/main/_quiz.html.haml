:scss
  .quiz-container {
    border-left: 2px solid #b3b3b3;
    margin-top: 15px;
    .quiz-text {
      color: #94000c;
      border-left: 4px solid #94000c;
      padding-left: 1rem;
    }
    .quiz-points {
      .point {
        .number {
          padding: 1px 1px 1px 5px;
        }
        padding: 1px 5px 1px 5px;
      }
    }
    .vote-container {
      .voted-count {
      }
    }
    .test {
      list-style-type: none;
    }
  }

  @media( max-width: 1199px ) {
    .quiz-container {
      font-size: 10px;
    }
  }
  @media( max-width: 991px ) {
    .quiz-container {
      font-size: 8px;
    }
  }

