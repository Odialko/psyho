:scss
  header {
    .main-button-container {
      text-align: center;
      .main-button-text {
        position: absolute;
        margin-top: -1.7%;
        //margin-left: 47.3%;
        margin-left: 47.3%;
        color: white;
        font-size: 20px;
      }
    }
    .header-solid-line {
      margin-top: -4%;
    }
    .red_link_button {
      position: absolute;
      width: 20%;
      margin-left: -10%;
      margin-top: -1.7%;
    }
  }
  @media (min-width: 1024px) {
    header {
      .main-button-container {
        .main-button-text {
          font-size: 15px;
        }
      }
    }
  }
  @media (max-width: 1024px) {
    header {
      .main-button-container {
        .main-button-text {
          font-size: 13px;
        }
      }
    }
  }
  @media (max-width: 768px) {
    header {
      .main-button-container {
        .main-button-text {
          font-size: 10px;
        }
      }
    }
  }
%header
  =image_tag "header_main_image.png", class: 'img-responsive header-image'
  =image_tag "header_solid_line.png", class: 'img-responsive header-solid-line'
  .main-button-container
    =link_to do
      =image_tag "red_link_button.png", class: 'red_link_button'
